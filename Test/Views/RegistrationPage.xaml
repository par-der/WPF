<Page x:Class="Test.Views.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid Background="WhiteSmoke">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <TextBlock Text="Login"/>
            <TextBox Name="TxbLogin"/>
            <TextBlock Text="Password"/>
            <TextBox Name="TxbPassword"/>
            <ComboBox Name="CmbRole" Margin="0 10"
                      DisplayMemberPath="Title"/>
            <Button Content="Регистрация" VerticalAlignment="Center"
                    HorizontalAlignment="Center" Name="Vhod"
                    Click="Vhod_Click"
                    Margin="5" Width="150"/>
        </StackPanel>
    </Grid>
</Page>
